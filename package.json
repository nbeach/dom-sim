{
  "name": "dom-sim",
  "version": "1.0.0",
  "description": "Simulate changes and events in the DOM",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "index.d.ts",
    "index.js",
    "index.js.map",
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.js.map",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/nbeach/dom-sim.git"
  },
  "author": "Nicholas Beach <nicholas.c.beach@gmail.com> (http://nicholasbeach.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nbeach/dom-sim/issues"
  },
  "keywords": [
    "dom",
    "simulate",
    "event",
    "testing"
  ],
  "scripts": {
    "clean": "rimraf src/**/*.js src/**/*.js.map src/**/*.d.ts",
    "build": "npm run clean && tsc",
    "release:tag": "git tag $(node -p -e \"require('./package.json').version\") && git push origin --tags",
    "release": "npm run test:once && npm run build && npm run release:tag && npm publish && npm run clean",
    "test": "mocha --opts mocha.opts --watch",
    "test:once": "mocha --opts mocha.opts",
    "coverage": "nyc mocha --opts mocha.opts",
    "lint": "tslint --project .",
    "ci": "yarn lint && yarn test:once && yarn build"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.spec.ts",
      "src/index.ts"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/chai-dom": "0.0.7",
    "@types/lodash": "^4.14.74",
    "@types/mocha": "^5.0.0",
    "@types/node": "^11.10.5",
    "@types/sinon": "^4.3.1",
    "@types/sinon-chai": "^3.2.2",
    "@types/webpack-env": "^1.13.6",
    "chai": "^4.1.2",
    "chai-dom": "^1.5.0",
    "jsdom": "^16.5.0",
    "mocha": "^6.0.2",
    "mocha-where": "^1.1.5",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.0.1",
    "sinon-chai": "^3.0.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.9.1",
    "tslint-no-unused-expression-chai": "^0.1.3",
    "typescript": "~3.3.3333",
    "webpack": "^4.11.1"
  },
  "dependencies": {
    "lodash": "^4.17.4"
  }
}
